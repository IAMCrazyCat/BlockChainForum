<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blockchainforum.ForumUserMapper">
    <select id="selectById" resultType="ForumUser">
        select uid, pwd, gender, createTime, email, introduction, avatar
        from forumeuser
        where uid = #{uid}
    </select>
</mapper>